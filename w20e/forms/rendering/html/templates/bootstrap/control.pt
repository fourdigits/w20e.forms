<!-- Control definition -->
<metal:define-macro define-macro="control">
  <metal:mike
    tal:define="well python: 'error' in extra_classes and 'well' or ''">

    <div id="${control.id}"
      class="control-group ${extra_classes} ${well}">

      <label metal:define-slot="label" class="control-label"
             for="input-${control.id}">
        ${control.label}
      </label>

      <div class="controls">
        <span class="help-inline alert alert-error"
          tal:condition="control.alert">${control.alert}</span>

        <p tal:condition="control.hint" class="help-block">${control.hint}</p>
        <p tal:condition="control.help" class="help-block">${control.help}</p>
        <metal:define-slot define-slot="input"/>
      </div>

    </div>
  </metal:mike>
</metal:define-macro>

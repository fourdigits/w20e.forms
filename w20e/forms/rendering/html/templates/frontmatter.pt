<form class="w20e-form ${form_class}" method="post" action="${action}"
      id="${form_id}" enctype="multipart/form-data">
  <div tal:condition="status_message" class="status">${status_message}</div>
  <input type="hidden" name="formprocess" value="1"/>

  <tal:condition condition="currentpage">
    <input type="hidden" name="w20e.forms.currentpage"
           value="${currentpage}" />
  </tal:condition>
